<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jetpack.submission.movietvshow">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieTvShow">
        <activity android:name=".activity.FavoriteTvShowActivity"
            android:label="Your Favorite TV Shows"
            android:parentActivityName=".activity.MainActivity"/>
        <activity android:name=".activity.FavoriteMovieActivity"
            android:label="Your Favorite Movies!"
            android:parentActivityName=".activity.MainActivity"/>

        <activity android:name=".activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.DetailActivity"
            android:label="@string/app_name"
            android:parentActivityName=".activity.MainActivity" />
        <activity android:name=".activity.MainActivity" />

        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.jetpack.submission.movietvshow.activity.MainActivity" />


    </application>

</manifest>